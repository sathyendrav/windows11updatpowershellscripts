{
  "UpdateSettings": {
    "EnableMicrosoftStore": true,
    "EnableWinget": true,
    "EnableChocolatey": true,
    "AutoRestartAfterUpdates": false,
    "CreateRestorePoint": true,
    "CheckDiskSpace": true,
    "MinimumFreeSpaceGB": 10
  },
  "Logging": {
    "EnableLogging": true,
    "LogDirectory": ".\\logs",
    "LogFileName": "update-log-{date}.txt",
    "MaxLogFileSizeKB": 5120,
    "MaxLogFiles": 10,
    "LogLevel": "Info",
    "EnableUpdateHistory": true,
    "HistoryDatabasePath": ".\\logs\\update-history.json",
    "HistoryRetentionDays": 90
  },
  "Notifications": {
    "EnableToastNotifications": true,
    "EnableConsoleOutput": true,
    "EnableWindowsNotifications": false,
    "EnableEmailNotifications": false,
    "EmailSettings": {
      "SmtpServer": "",
      "SmtpPort": 587,
      "FromAddress": "",
      "ToAddress": "",
      "UseSSL": true
    }
  },
  "PackageExclusions": {
    "Winget": [],
    "Chocolatey": []
  },
  "ScheduleSettings": {
    "QuietHoursStart": "22:00",
    "QuietHoursEnd": "07:00",
    "RespectQuietHours": false,
    "MaxRetryAttempts": 3,
    "RetryDelaySeconds": 300
  },
  "ReportSettings": {
    "GenerateReport": true,
    "ReportFormat": "HTML",
    "ReportDirectory": ".\\reports",
    "IncludeSystemInfo": true,
    "IncludeInstalledSoftware": true
  },
  "Advanced": {
    "TimeoutSeconds": 3600,
    "ParallelExecution": false,
    "VerboseOutput": false,
    "DryRun": false
  },
  "RollbackSettings": {
    "EnableAutomaticRestorePoints": true,
    "RestorePointDescription": "Before Windows Update Helper",
    "KeepPackageHistory": true,
    "PackageHistoryDays": 90,
    "AllowPackageDowngrade": true,
    "BackupBeforeRollback": false
  },
  "DifferentialUpdates": {
    "EnableDifferentialUpdates": true,
    "CachePath": ".\\cache\\package-cache.json",
    "CacheExpiryHours": 24,
    "AlwaysUpdateCache": true,
    "ShowChangeDetails": true
  },
  "PackagePriority": {
    "EnablePriorityOrdering": true,
    "OrderingStrategy": "PriorityThenAlphabetical",
    "CriticalPackages": {
      "Winget": [
        "Microsoft.WindowsTerminal",
        "Microsoft.VisualStudioCode"
      ],
      "Chocolatey": [
        "chocolatey",
        "powershell-core"
      ],
      "Store": []
    },
    "HighPriorityPackages": {
      "Winget": [
        "Microsoft.PowerShell",
        "Git.Git"
      ],
      "Chocolatey": [
        "git",
        "nodejs"
      ],
      "Store": []
    },
    "LowPriorityPackages": {
      "Winget": [],
      "Chocolatey": [],
      "Store": []
    },
    "DeferredPackages": {
      "Winget": [],
      "Chocolatey": [],
      "Store": []
    }
  }
}
